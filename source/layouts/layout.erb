<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- Just an image -->
    <nav class="navbar navbar-light bg-dark py-5 px-lg-8">
      <a class="navbar-brand" href="#">
        <%= image_tag('isotype.svg', class: 'd-md-none'); %>
        <%= image_tag('logo.svg', class: 'd-none d-md-block'); %>
      </a>
      <form class="form-inline">
        <span class="nav-item">
          <div class="dropdown mr-md-5">
            <span class="more-positions" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              otras vacantes
              <%= image_tag("arrow.svg", class: 'caret-down') %>
            </span>

            <div class="dropdown-more-positions dropdown-menu p-3 pt-4 mt-4" aria-labelledby="dropdownMenuLink">
              <a class="dropdown-item" href="#">ruby fullstack dev</a>
              <a class="dropdown-item" href="#">node JS dev</a>
            </div>
          </div>
        </span>
        <span class="nav-item d-none d-sm-block">
          <button class="btn btn-apply px-5 ml-3" type="submit">aplicar</button>
        </span>
      </form>

    </nav>

    <%= yield %>

    <footer class="px-3 px-lg-8 py-4">
      <div class="row">
        <div class="col-sm-12">
          <p>michelada.io</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <address>
            info@michelada.io
          </address>
        </div>
        <div class="col-sm-5">
          <p>We <a href="https://sipsandbits.com" target="_blank" data-ga-label="blog">blog</a> about things we like.</p>
        </div>
        <div class="col-sm-2 social">
          <ul class='list-unstyled list-inline float-right'>
            <li class="list-inline-item">
              <a href="http://www.twitter.com/micheladaio">
                <%= image_tag('ic-social-twitter.svg'); %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="http://github.com/michelada">
                <%= image_tag('ic-social-github.svg'); %>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 text-right">
          <p>
          Copyright Â© 2018 Michelada, LLC. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
    <button type='button' class='btn btn-apply btn-block d-lg-none p-sticky-bottom' href='#'>aplicar</button>
  </body>
</html>
